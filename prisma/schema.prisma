generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Checklist{
  id      Int @id @default(autoincrement())
  name    String   @unique
  Task    Task[]
}


model Task{
  id         Int        @id @default(autoincrement())
  done       Boolean    @default(false)
  mission    String     
  deadline   DateTime?  
  List       Checklist @relation(fields:[listId], references: [id])
  listId      Int    
} 


model DoneTasks{
  id         Int        @id 
  done       Boolean    @default(true)
  mission    String     
  deadline   DateTime? 
}